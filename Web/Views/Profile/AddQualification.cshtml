@{
    ViewData["Title"] = "Add qualification";
}

@model User // needs to be a UpdateProfileViewModel or something

<div class="form-container">
    <div class="form-wrapper">
        <div class="form-header">
            <h2>Add qualification</h2>
        </div>
        <div class="form-content">
            <form class="form" asp-action="Register">
                <div class="form-child">
                    <label>Title</label>
                    <div class="form-child-input">
                        <div><i class="fa-solid fa-heading"></i></div>
                        <input type="text" placeholder="Write title here">
                    </div>
                </div>
                <div class="form-child">
                    <label>Location</label>
                    <div class="form-child-input">
                        <div><i class="fa-solid fa-location-dot"></i></div>
                        <input type="text" placeholder="Stockholm">
                    </div>
                </div>
                <div class="form-child">
                    <label>Description</label>
                    <div class="form-child-input">
                        <div><i class="fa-solid fa-quote-left"></i></div>
                        <input type="text" placeholder="Lorem ipsum">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-child">
                        <label>Start date</label>
                        <div class="form-child-input">
                            <div><i class="fa-solid fa-calendar-days"></i></div>
                            <input type="date" placeholder="2024-01-01">
                        </div>
                    </div>
                    <div class="form-child">
                        <label>End date</label>
                        <div class="form-child-input">
                            <div><i class="fa-solid fa-calendar-days"></i></div>
                            <input type="date" placeholder="2025-01-01">
                        </div>
                    </div>
                </div>
                <div class="form-child">
                    <label>Type</label>
                    <div class="form-child-input">
                        <div><i class="fa-solid fa-quote-left"></i></div>
                        @* <select asp-items="@ViewBag.options" asp-for="TypeId"></select> *@
                    </div>
                </div>
                <div class="form-row">
                    <button type="submit" class="submit">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>