@using System.Security.Claims;
@using Web.Models.Project;

@model UpdateProjectViewModel;

@{
    ViewData["Title"] = "Edit project";
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

<div class="form-container">
    <div class="form-wrapper">
        <div class="form-header">
            <h2>Update project details</h2>
        </div>
        <div class="form-content">
            <form class="form" asp-controller="Project" asp-action="UpdateProject" asp-route-pid="@Model.ProjectId">
                <div class="form-child">
                    <label asp-for="Title">Title</label>
                    <div class="form-child-input">
                        <div><i class="fa-solid fa-signature"></i></div>
                        <input type="text" asp-for="Title">
                    </div>
                    <span class="form-error" asp-validation-for="Title"></span>
                </div>
                <div class="form-child">
                    <label asp-for="Description">Description</label>
                    <div class="form-child-input">
                        <textarea asp-for="Description"></textarea>
                    </div>
                    <span class="form-error" asp-validation-for="Description"></span>
                </div>
                <button type="submit" class="submit">Save</button>
            </form>
        </div>
    </div>
</div>