<header>
    <nav>
        <a class="logo" asp-action="Index"> CV-Site </a>
        <div class="message"> 
            <a asp-controller="Messages" asp-action="Index"> Messages</a>
            <i class="fa-regular fa-envelope"></i>
            <div class="inbox">
                <p> 7 </p>
            </div>
        </div>
        <a asp-controller="Project" asp-action="Index"> Project </a>
        @if (!User.Identity.IsAuthenticated) {
            <a asp-controller="Auth" asp-action="Login"> Login </a>
        }
        else
        {
            <form asp-controller="Auth" asp-action="Logout">
                <button type="submit">Logout</button>
            </form>
            <div class="profile">
                <a asp-controller="Profile" asp-action="Index"> Profile </a>
                <img src=`/assets/${User.Avatar}` class="avatar" />
            </div>
        }

    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
